<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context="com.pizzamoto.xportify_admin.payment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="5"
        android:orientation="horizontal"
        android:background="#A022526e">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1">
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="3">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:src="@drawable/logo"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:tint="#FFF"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"></LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guimaras Dried Mangoes 180g"
            android:textSize="20sp"
            android:textColor="#FFF"
            android:id="@+id/name"
            android:textStyle="bold"
            android:paddingRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guimaras Dried Mangoes 180g"
            android:textSize="12sp"
            android:id="@+id/price"
            android:textColor="#FFF"
            android:textStyle="bold"
            android:paddingRight="10dp"/>
        <Spinner
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/spinnerpayment"
            android:textColor="#FFFFFF"
            android:textStyle="bold"
            android:layout_marginTop="10dp"
            android:popupBackground="#104160"
            android:textSize="14dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:id="@+id/viewcc"
            android:layout_height="250dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Credit Card Number*"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:background="#20FFFFFF">
                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#2022526e"
                    android:paddingLeft="10dp"
                    android:textSize="13sp"
                    android:layout_marginTop="2dp"
                    android:textColor="#FFF"
                    android:paddingRight="10dp"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="13dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="Expiration date*"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:background="#20FFFFFF">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2022526e"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:hint="Month"
                            android:textColorHint="#FFF"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:textColor="#FFF"
                            android:paddingRight="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="13dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text=""/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2dp"
                        android:background="#20FFFFFF">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2022526e"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:hint="Year"
                            android:textColorHint="#FFF"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:textColor="#FFF"
                            android:paddingRight="10dp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFF"
                        android:textSize="13dp"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="CCV2*"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginLeft="2dp"
                        android:background="#20FFFFFF">
                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="#2022526e"
                            android:paddingLeft="10dp"
                            android:gravity="center"
                            android:textColorHint="#FFF"
                            android:textSize="13sp"
                            android:layout_marginTop="2dp"
                            android:textColor="#FFF"
                            android:paddingRight="10dp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="#A022526e"
                android:gravity="center"
                android:onClick="pay">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#00000000"
                    android:paddingLeft="10dp"
                    android:text="Proceed"
                    android:textSize="15sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:orientation="vertical"
            android:id="@+id/viewbitcoin"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFF"
                android:textSize="13dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="Code expires in: 15:00"/>
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/qr"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="15dp"
                android:background="#A022526e"
                android:gravity="center"
                android:onClick="pay">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:background="#00000000"
                    android:paddingLeft="10dp"
                    android:text="Confirm Payment"
                    android:textSize="15sp"
                    android:textColor="#FFF"
                    android:textStyle="bold"
                    android:paddingRight="10dp"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
